#include<stdio.h>
void input(int *a,int *b)
{
    printf("enter the 1st number:\n");
    scanf("%d",a);
    printf("enter the 2st number:\n");
    scanf("%d",b);
}
int compute(int a,int b,int *n)
{
    *n=a+b;
}
void output(int n)
{
     printf("the number is=%d\n",n);
}
int main()
{
     int a,b,n;
     input(&a,&b);
     compute(a,b,&n);
     output(n);
}

